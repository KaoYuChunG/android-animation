<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextStyleOpen" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="TextStyleClose" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">38sp</item>
    </style>

</resources>